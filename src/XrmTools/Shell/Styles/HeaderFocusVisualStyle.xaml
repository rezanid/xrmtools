<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:styles="clr-namespace:XrmTools.Shell.Styles">
  <styles:FocusVisualHeightConverter x:Key="FocusVisualHeightConverter"/>
  <Style x:Key="HeaderFocusVisualStyle">
    <Setter Property="FrameworkElement.Height"
            Value="{Binding RelativeSource={RelativeSource Self}, Converter={StaticResource FocusVisualHeightConverter}}"/>
    <Setter Property="FrameworkElement.VerticalAlignment" Value="Top"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate>
          <Border BorderBrush="{DynamicResource {x:Static styles:ShellColors.FocusStrokeOuterBrushKey}}"
                  BorderThickness="{x:Static styles:StrokeWidths.Thick}"
                  CornerRadius="{x:Static styles:CornerRadii.FocusRect}"
                  Margin="{x:Static styles:Spacings.XSNudgeInvert}" SnapsToDevicePixels="True"
                  UseLayoutRounding="True"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>