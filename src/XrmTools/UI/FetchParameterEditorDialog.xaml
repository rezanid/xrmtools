<p:DialogWindow xmlns:p="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             x:Class="XrmTools.UI.FetchParameterEditorDialog"
             x:Name="FetchParameterEditorDialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XrmTools.UI"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             mc:Ignorable="d" 
             Width="700" Height="450" MinWidth="600" MinHeight="400"
             d:DesignHeight="450" d:DesignWidth="700" d:DataContext="{d:DesignInstance Type=local:FetchParameterEditorViewModel, IsDesignTimeCreatable=True}"
             Title="FetchXML Parameter Editor" toolkit:Themes.UseVsTheme="True"
             p:FocusHelper.FocusTarget="{Binding ElementName=ValueTextBox}">
    <p:DialogWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </p:DialogWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="12,12,12,0">
            <TextBlock Text="Provide values for FetchXML parameters" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Select a parameter from the list and enter its value on the right." Foreground="Gray"/>
        </StackPanel>

        <Grid Margin="12" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Left" VerticalAlignment="Stretch"
                      Background="{DynamicResource {x:Static p:ThemedDialogColors.WindowPanelBrushKey}}"/>

            <!-- Parameter List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Parameters:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Grid.Row="1"
                     x:Name="ParametersListBox"
                     ItemsSource="{Binding Parameters}"
                     SelectedItem="{Binding SelectedParameter}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="*" Foreground="Red" Margin="0,0,5,0" FontWeight="Bold" 
                                          Visibility="{Binding HasDefaultValue, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                          ToolTip="Required parameter (no default value)"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DefaultValue}" Foreground="Gray" FontStyle="Italic" 
                                              Visibility="{Binding HasDefaultValue, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Value Editor -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Parameter Value:" FontWeight="Bold" Margin="0,0,0,5"/>
                
                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="{Binding SelectedParameter.Name, StringFormat='Name: {0}'}" Margin="0,0,0,3"/>
                    <TextBlock Text="{Binding SelectedParameter.DefaultValue, StringFormat='Default: {0}'}" 
                              Foreground="Gray" 
                              Visibility="{Binding SelectedParameter.HasDefaultValue, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <TextBox Grid.Row="2" 
                        x:Name="ValueTextBox"
                        Text="{Binding ParameterValue, UpdateSourceTrigger=PropertyChanged}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        Visibility="{Binding SelectedParameter.IsElementParameter, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <p:WatermarkedTextBox Grid.Row="2" 
                        x:Name="SimpleValueTextBox"
                        Text="{Binding ParameterValue, UpdateSourceTrigger=PropertyChanged}"
                        Watermark="Enter parameter value"
                        Visibility="{Binding SelectedParameter.IsElementParameter, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                <TextBlock Grid.Row="3" 
                          Text="* Required parameter" 
                          Foreground="Red" 
                          Margin="0,10,0,0"
                          Visibility="{Binding SelectedParameter.HasDefaultValue, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            </Grid>
        </Grid>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12">
            <Button Content="OK" MinWidth="75" Margin="0,0,5,0"
                    Command="{Binding OkCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=p:DialogWindow}}"
                    IsDefault="True"/>
            <Button Content="Cancel" MinWidth="75"
                    Command="{Binding CancelCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=p:DialogWindow}}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</p:DialogWindow>
