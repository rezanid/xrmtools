{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Plugin Registration Schema",
  "$id": "http://schemas.aginsurance.com/pluginregistration.schema.def.json",

  "type": "object",
  "required": ["PluginTypes"],

  "properties": {
    "Id": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "Name": {
      "type": "string"
    },
    "IsolationMode": {
      "type": "integer",
      "default": 2
    },
    "SourceType": {
      "type": "integer",
      "default": 0
    },
    "Version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "PluginTypes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "TypeName", "Steps" ],
        "properties": {
          "Id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
          },
          "Name": {
            "type": "string"
          },
          "FriendlyName": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "TypeName": {
            "type": "string"
          },
          "Steps": {
            "type": "array",
            "items": {
              "required": [ "MessageName" ],
              "type": "object",
              "properties": {
                "Id": {
                  "type": "string",
                  "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                },
                "Name": {
                  "type": "string"
                },
                "Description": {
                  "type": "string"
                },
                "MessageName": {
                  "type": "string"
                },
                "Images": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [ "Name", "Attributes", "EntityAlias", "MessagePropertyName", "ImageType" ],
                    "properties": {
                      "Id": {
                        "type": "string",
                        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
                      },
                      "Name": {
                        "type": "string"
                      },
                      "Attributes": {
                        "type": "string"
                      },
                      "EntityAlias": {
                        "type": "string",
                        "default": "PreImage"
                      },
                      "ImageType": {
                        "type": "integer",
                        "default": 0
                      },
                      "MessagePropertyName": {
                        "type": "string",
                        "default": "Target"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
